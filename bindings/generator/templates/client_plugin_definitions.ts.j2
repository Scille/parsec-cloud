{# Macros -#}

{%- macro render_type(t) %}
{%- if t.kind == "ref" -%}
{{ render_type(t.elem) }}
{%- elif t.kind == "optional" -%}
{{ render_type(t.elem) }} | null
{%- elif t.kind == "result" -%}
Result<{{ render_type(t.ok) }}, {{ render_type(t.err) }}>
{%- elif t.kind == "struct" or t.kind == "variant" -%}
{{ t.name }}
{%- elif t.kind == "dict" -%}
Map<{{ render_type(t.key) }}, {{ render_type(t.value) }}>
{%- elif t.kind == "list" -%}
Array<{{ render_type(t.elem) }}>
{%- elif t.kind == "tuple" -%}
[
    {%- for value in t.values -%}
        {{- render_type(value) }}{{ ", " if not loop.last else "" }}
    {%- endfor -%}
]
{%- elif t.kind == "none" -%}
null
{%- elif t.kind == "bool" -%}
boolean
{%- elif t.kind == "float" -%}
number
{%- elif t.kind == "str" -%}
string
{%- elif t.kind in ("str_based", "bytes_based", "i32_based", "u32_based", "i64_based", "u64_based", "f64_based") -%}
{{ t.name }}
{%- elif t.kind == "bytes" -%}
Uint8Array
{%- elif t.kind == "OnClientEventCallback" -%}
(handle: number, event: ClientEvent) => void
{%- elif t.kind == "enum" -%}
{{ t.name }}
{%- else -%}
{{ raise("Unsupported type %r" % t) }}
{%- endif -%}
{% endmacro -%}

{#- End of macros #}

