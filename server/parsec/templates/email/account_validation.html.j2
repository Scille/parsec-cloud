{% extends "email/base.html.j2" %}
{% block document_title %}Parsec Account: Confirm your email address{% endblock %}

{% block preheader %}Please confirm your email address to get started with your Parsec Account.{% endblock %}

{% block title %}To confirm your Parsec Account creation:{% endblock %}

{% block main_content %}
{% from "email/macros.html.j2" import gen_contents, render_link, render_fallback_link %}
{{
  gen_contents([
    namespace(
      title="Download Parsec application",
      text="Make sure to download and install Parsec:",
      extras=[
        render_link("https://parsec.cloud/en/start-parsec", "Download Parsec", extra_class="button-secondary"),
        render_fallback_link("https://parsec.cloud/en/start-parsec")
      ]
    ),
    namespace(
      text="Once installed, click on the link below to confirm your email address.",
      extras=[
        render_link(validation_url, "Confirm email address"),
        render_fallback_link(validation_url)
      ]
    )
  ])
}}
{% endblock %}
