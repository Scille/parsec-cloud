{
    "label": "UserCertificate",
    "type": "user_certificate",
    "other_fields": [
        {
            // SHA256 digest of the raw content (i.e. serialized and signed) of the
            // previous certificate in the topic.
            // `None` in case the certificate is the first in the topic
            // (in which case `author` must be the root verify key).
            "name": "previous_in_topic",
            "type": "RequiredOption<HashDigest>"
        },
        {
            "name": "author",
            "type": "CertificateSignerOwned"
        },
        {
            "name": "timestamp",
            "type": "DateTime"
        },
        {
            "name": "user_id",
            "type": "UserID"
        },
        {
            // None in case of redacted certificate
            "name": "human_handle",
            "type": "RequiredOption<HumanHandle>"
        },
        {
            "name": "public_key",
            "type": "PublicKey"
        },
        {
            "name": "algorithm",
            "type": "PrivateKeyAlgorithm"
        },
        {
            "name": "profile",
            "type": "UserProfile"
        }
    ],
    "nested_types": [
        {
            "name": "PrivateKeyAlgorithm",
            "variants": [
                {
                    "name": "X25519XSalsa20Poly1305",
                    "discriminant_value": "X25519_XSALSA20_POLY1305"
                }
            ]
        }
    ]
}
