{
    "problemMatcher": [
        {
            "owner": "cargo-deny",
            "pattern": [
                {
                    "regexp": "^(\\w+)\\[(\\w+)\\]: (.*)$",
                    "severity": 1,
                    "code": 2,
                    "message": 3
                },
                {
                    "regexp": "^\\s+┌─ (.*):(\\d+):(\\d+)$",
                    "file": 1
                }
            ]
        }
    ]
}
