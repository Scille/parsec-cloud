{# Macros -#}

{%- macro render_type(t) %}
{%- if t.kind == "ref" -%}
{{ render_type(t.elem) }}
{%- elif t.kind == "optional" -%}
{{ render_type(t.elem) }} | null
{%- elif t.kind == "result" -%}
Result<{{ render_type(t.ok) }}, {{ render_type(t.err) }}>
{%- elif t.kind == "struct" or t.kind == "variant" -%}
{{ t.name }}
{%- elif t.kind == "list" -%}
Array<{{ render_type(t.elem) }}>
{%- elif t.kind == "bool" -%}
boolean
{%- elif t.kind == "int" -%}
number
{%- elif t.kind == "float" -%}
number
{%- elif t.kind in ("str", "str_based") -%}
string
{%- elif t.kind == "bytes" -%}
Uint8Array
{%- else -%}
{{ raise("Unsupported type %r" % t) }}
{%- endif -%}
{% endmacro -%}

{#- End of macros #}

