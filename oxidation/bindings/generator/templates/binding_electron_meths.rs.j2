    let mut v = Vec::with_capacity(size as usize);
    for i in 0..size {
        let js_item = {{ js_val }}.get({{ mut_cx_ref }}, i)?;
        v.push({{ render_downcasted_js_to_rs("js_item", type.elem, mut_cx_ref) | indent(8) }});
