{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictFunctionTypes": true,
        "useDefineForClassFields": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
            "cypress",
            "vite/client",
            "cypress-file-upload",
        ],
        "paths": {
            "@/*": [
                "src/*",
            ],
            "@tests/*": [
                "tests/*",
            ],
        },
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "ScriptHost",
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
    ],
}
