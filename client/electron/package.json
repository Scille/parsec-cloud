{
    "name": "parsec",
    "version": "3.5.1-a.0+dev",
    "description": "Secure file sharing in the cloud",
    "author": {
        "name": "Scille SAS",
        "email": "contact@scille.fr"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Scille/parsec-cloud"
    },
    "license": "BUSL-1.1",
    "main": "build/src/index.js",
    "scripts": {
        "libparsec:copy": "node ./scripts/copy_bindings.js",
        "build": "npm run build-capacitor-electron && npm run libparsec:copy && tsc",
        "build-capacitor-electron": "node scripts/build-capacitor-electron.js && tsc ./capacitor-electron/electron-platform/index.ts --outDir ./src/capacitor-electron --declaration --emitDeclarationOnly --esModuleInterop",
        "electron:copy": "npm link capacitor-electron && npx cap copy capacitor-electron",
        "electron:open": "npm link capacitor-electron && npx cap open capacitor-electron",
        "electron:start-live": "npm run build && node ./live-runner.js",
        "electron:start": "npm run build && electron --inspect=5858 ./",
        "electron:release": "npm run build && node package.js --mode prod",
        "electron:sign": "node package.js --mode prod --sign",
        "sentry:sourcemaps": "sentry-cli sourcemaps inject --org scille --project parsec3-frontend ./build && sentry-cli sourcemaps upload --org scille --project parsec3-frontend ./build"
    },
    "dependencies": {
        "@sentry/electron": "^6.1.0",
        "builder-util-runtime": "9.2.10",
        "chokidar": "~4.0.3",
        "electron-log": "^5.3.2",
        "electron-serve": "~1.3.0",
        "electron-unhandled": "~4.0.1",
        "electron-updater": "6.3.9",
        "electron-window-state": "~5.0.3",
        "events": "^3.3.0",
        "mime-types": "^3.0.1",
        "regedit": "^5.1.4",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@electron/notarize": "^2.5.0",
        "@sentry/cli": "^2.42.2",
        "axios": "^1.8.2",
        "chalk": "^5.6.2",
        "commander": "^13.1.0",
        "electron": "^38.3.0",
        "electron-builder": "~25.1.8",
        "ora": "^9.0.0",
        "typescript": "~5.8.2"
    },
    "keywords": [
        "capacitor",
        "electron"
    ]
}
